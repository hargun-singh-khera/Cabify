<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="50dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgViewSlider"
        android:layout_width="wrap_content"
        android:layout_height="400dp"
        android:src="@drawable/img1" />

    <TextView
        android:id="@+id/heading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enjoy Your Ride"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:textSize="25sp"
        android:textColor="@color/black"
        android:fontFamily="@font/arial_mt"/>

    <TextView
        android:id="@+id/description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Enjoy the ride and also track your location in real-time on your map."
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textSize="20sp"
        android:fontFamily="@font/open_sans_font"
        android:textColor="#B2000000"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="30dp" />

</LinearLayout>